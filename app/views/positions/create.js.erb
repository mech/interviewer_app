<% if @position.valid? -%>
  location.href = "<%= position_stage_url(@position, 1) %>";
<% else %>
  $("form.entry").find(".error_messages").remove();
  $(".field_with_errors input").unwrap();

  $("form.entry").prepend("<%= escape_javascript(render("shared/error_messages", :target => @position)) %>");
  <% @position.errors.each do |attr, msg| -%>
    $("#position_<%= attr %>").wrap('<div class="field_with_errors" />');
  <% end -%>
<% end -%>
