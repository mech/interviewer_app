%li.question.group{:id => "qn_#{index}", :data => {"new-record" => stage_question.new_record?.to_s}}
  = form_for [stage.position, stage, stage_question], :remote => true do |f|
    .no= index
    .entry
      %fieldset
        = f.hidden_field :index, :value => index
        %div
          = f.label :category
          = f.select :category, StageQuestion::CATEGORIES
        %div
          = f.label :question
          = f.text_field :question, :size => 50
        %div
          = f.label :answer, "Expected answer"
          = f.text_area :answer, :rows => 3, :cols => 70
      %div.action
        = f.submit "Add question", :class => "button"
    .points
      = f.text_field :points, :size => 2, :maxlength => 3
      pts
