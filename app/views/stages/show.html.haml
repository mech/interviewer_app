%header#sub-action


#splitview-wrap.group
  %section#action
    = form_tag("/") do
      = text_field_tag(:q, "", :class => "search", :placeholder => "Find positions")

    %header
      %hgroup
        %h1 POSITIONS
        = link_to("Options", "/", :class => "options")
        %small Last access 1 day ago

  %section#view
    .entry
      .question_guide
        %h2 Stage #{@stage_index} interview
        = link_to @position.title, @position, :class => "fw"
        .points
          50 points

      .questions
        .question#qn_1.group
          = form_for @question, :url => position_stage_questions_path(@position, @stage.stage_number), :remote => true do |f|
            .no 1
            .entry
              %fieldset
                %div
                  = f.label :category
                  = f.select :category, StageQuestion::CATEGORIES
                %div
                  = f.label :question
                  = f.text_field :question, :size => 50
                %div
                  = f.label :answer
                  = f.text_area :answer, :rows => 5, :cols => 70
                %div
                  = f.submit "Add"
            .points
              = f.text_field :points, :size => 2, :maxlength => 3
              pts
