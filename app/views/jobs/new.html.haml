%header#sub-action
  

#splitview-wrap.group
  %section#action
    = form_tag("/") do
      = text_field_tag(:q, "", :class => "search", :placeholder => "Find jobs")

    %header
      %hgroup
        %h1 JOB OPENINGS
        = link_to("Options", "/", :class => "options")
        %small Last access 1 day ago

  %section#view
    .entry
      %header
        %h1 New job
      = form_for @job, :html => {:class => "entry"}, :remote => true do |f|
        = render "shared/error_messages", :target => @job
        %fieldset
          %div
            = f.label :title, "Title"
            = f.text_field :title, :size => 40

          %div
            %label{:for => "job_description"}
              Description
              %small Job requirements
            = f.text_area :description, :rows => 10, :cols => 70

          %div
            = f.label :location, "Location"
            = f.text_field :location, :size => 40

        %div.action
          = f.submit "Prepare questions", :class => "button"
