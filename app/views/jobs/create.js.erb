<% if @job.valid? -%>
  location.href = "/jobs";
<% else %>
  $("form.entry").find(".error_messages").remove();
  $(".field_with_errors input").unwrap();

  $("form.entry").prepend("<%= escape_javascript(render("shared/error_messages", :target => @job)) %>");
  <% @job.errors.each do |attr, msg| -%>
    $("#job_<%= attr %>").wrap('<div class="field_with_errors" />');
  <% end -%>
<% end -%>
