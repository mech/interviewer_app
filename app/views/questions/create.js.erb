<% if @question.valid? -%>
<% else %>
  $("form .entry").find(".error_messages").remove();
  $(".field_with_errors input").unwrap();

  $("form .entry").prepend("<%= escape_javascript(render("shared/error_messages", :target => @question)) %>");
  <% @question.errors.each do |attr, msg| -%>
    $("#question_<%= attr %>").wrap('<div class="field_with_errors" />');
  <% end -%>
<% end -%>
