!!! 5

!= ie_html
%head
  %title= @html_title
  %meta{:charset => "utf-8"}
  %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
  %meta{:name => "MSSmartTagsPreventParsing", :content => "true"}
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
  = csrf_meta_tag
  = javascript_include_tag "modernizr-1.6.min"
  = stylesheet_link_tag :all

%body
  =raw flash_message
  #header-wrap
    %header#mast
      = render "shared/primary_nav"

  #content-wrap
    = yield

  = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.js"

  :javascript
    !window.jQuery && document.write(unescape('%3Cscript src="javascripts/jquery-1.4.4.js"%3E%3C/script%3E'))
    jQuery.ajaxSetup({ beforeSend: function (xhr) { xhr.setRequestHeader("Accept", "text/javascript"); } });
    
  = javascript_include_tag "jquery.ui.core.min", "jquery.ui.widget.min", "jquery.ui.mouse.min", "jquery.ui.draggable", "jquery.ui.droppable", "jquery.ui.sortable.min", "jquery.effects.core", "jquery.effects.pulsate", "rails", "app"

  /[if lt IE 7]
    = javascript_include_tag "dd_belatedpng"
    :javascript
      DD_belatedPNG.fix('img, .png_bg');
!= "</html>"
